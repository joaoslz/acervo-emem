<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="acervo_emem" transaction-type="RESOURCE_LOCAL">
   		
		<mapping-file>META-INF/consultas/findByNome.xml</mapping-file>
		<mapping-file>META-INF/consultas/findAll.xml</mapping-file>
		<mapping-file>META-INF/consultas/findBy.xml</mapping-file>
		<class>ma.cultura.emem.acervo.modelo.Artigo</class>
		<class>ma.cultura.emem.acervo.modelo.CD</class>
		<class>ma.cultura.emem.acervo.modelo.Emprestimo</class>
		<class>ma.cultura.emem.acervo.modelo.Exemplar</class>
		<class>ma.cultura.emem.acervo.modelo.Fasciculo</class>
		<class>ma.cultura.emem.acervo.modelo.ItemAcervo</class>
		<class>ma.cultura.emem.acervo.modelo.Musica</class>
		<class>ma.cultura.emem.acervo.modelo.Obra</class>
		<class>ma.cultura.emem.acervo.modelo.Partitura</class>
		<class>ma.cultura.emem.acervo.modelo.Usuario</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Assunto</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Autor</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Cantor</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Compositor</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Editora</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Genero</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Gravadora</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Idioma</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Instrumento</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Local</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Midia</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.Periodico</class>
		<class>ma.cultura.emem.acervo.modelo.auxiliar.TipoObra</class>
				
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/acervodb" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>
	</persistence-unit>

</persistence>